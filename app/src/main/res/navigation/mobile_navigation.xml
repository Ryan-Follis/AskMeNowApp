<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.askmenow.ui.home.HomeFragment"
        android:label="DMs"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.askmenow.ui.dashboard.DashboardFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.askmenow.ui.notifications.NotificationsFragment"
        android:label="Map"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_questions"
        android:name="com.example.askmenow.ui.questions.QuestionsFragment"
        android:label="Swipes"
        tools:layout="@layout/fragment_questions" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.askmenow.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>