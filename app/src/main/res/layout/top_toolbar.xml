<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/search_user"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:background="@color/white"
            android:contentDescription="search user"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/search" />

        <ImageButton
            android:id="@+id/friend_request"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toLeftOf="@id/remember_user"
            android:background="@color/white"
            android:contentDescription="friend request"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/friends" />

        <ImageButton
            android:id="@+id/remember_user"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/select_photo"
            android:background="@color/white"
            android:contentDescription="remember user"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/love" />

        <ImageButton
            android:id="@+id/select_photo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:contentDescription="select photo"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/photo" />

    </RelativeLayout>

</LinearLayout>