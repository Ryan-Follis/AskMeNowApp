<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AskMeNow"
        tools:targetApi="31">

        <!--
             TODO: Before you run your application, you need a Google Maps API key.

             To get one, follow the directions here:

                https://developers.google.com/maps/documentation/android-sdk/get-api-key

             Once you have your API key (it starts with "AIza"), define a new property in your
             project's local.properties file (e.g. MAPS_API_KEY=Aiza...), and replace the
             "YOUR_API_KEY" string in this file with "${MAPS_API_KEY}".
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".activities.SignInActivity"
            android:exported="true"
            android:label="@string/title_activity_sign_in">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.SignUpActivity"
            android:exported="true"
            android:label="@string/title_activity_sign_up"/>

        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main">
            <intent-filter>
<!--                <action android:name="android.intent.action.MAIN" />-->
<!--                <category android:name="android.intent.category.LAUNCHER" />-->
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <activity
            android:name=".activities.DirectMessagesActivity"
            android:exported="true"
            android:label="@string/title_activity_direct_messages"/>

        <activity
            android:name=".activities.MapsActivity"
            android:exported="true"
            android:label="@string/title_activity_maps"/>

        <activity android:name=".activities.ProfilehubActivity"
            android:exported="true"
            android:label="ProfileHubActivity"/>

        <activity android:name=".activities.UploadPhotoActivity"
            android:exported="true"
            android:label="UploadPhotoActivity"/>

        <activity android:name=".activities.SearchUserActivity"
            android:exported="true"
            android:label="SearchUserActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <activity android:name=".activities.SearchResultActivity"
            android:exported="true"
            android:label="SearchResultActivity"/>

        <!--allow the main activity to call the search dialog-->
        <meta-data android:name="android.app.default_searchable"
            android:value=".activities.MainActivity" />

    <service
            android:name=".firebase.DirectMessagesService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>